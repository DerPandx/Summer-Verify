import discord
import asyncio
from discord.ext import commands
from discord.ext.commands import CommandNotFound

bot = commands.Bot(command_prefix="v!")
bot.remove_command('help')

@bot.event
async def on_ready():
    await bot.change_presence(status=discord.Status.online, activity=discord.Activity(
        type=discord.ActivityType.playing, name="v!verify by @$Pyth$#9999"
    ))
    print('Bot erfolgreich Online')

@bot.command()
async def verify(ctx):
  verifyRole = discord.utils.get(ctx.guild.roles, name= "[âœ…] Verifiziert")
  embed = discord.Embed(title="Verify", description=f"{ctx.author.mention} hat sich erfolgreich **`ðŸš€VerifiziertðŸš€`**", color=0xffff)
  embed1 = discord.Embed(title="Verify", description=f"Du bist nun erfolgreich **Verifiziert**, bitte befolge die *Server Regeln* im Discord!", color=0xffff)
  await ctx.author.add_roles(verifyRole)
  await ctx.send(embed=embed)
  await ctx.author.send(embed=embed1)

@bot.command()
async def verifyhelp(ctx):
  embed = discord.Embed(title="Verify Help Command's", description=f"Verwende **v!verify** um dich zu Verifizieren.", color=0xffff)
  await ctx.send(embed=embed)

bot.run("ODc1NDI3NDUzODAyMjU4NTEy.YRVXWQ.RLEu8yh1dUfkk6-qrNwEQ_vdyKw")
